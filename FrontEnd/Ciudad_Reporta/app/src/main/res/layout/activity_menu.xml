<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2">

    <!-- HEADER -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#3499B5"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:windowFullscreen="true">

        <!-- Logo centrado -->
        <ImageView
            android:id="@+id/logoHeader"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_header"
            android:layout_centerInParent="true"
            android:contentDescription="Logo de la aplicaci贸n" />

        <!-- Bot贸n cerrar sesi贸n -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar sesi贸n"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:backgroundTint="#D32F2F"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"/>
    </RelativeLayout>

    <!-- CONTENIDO PRINCIPAL: botones de opciones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:spacing="16dp">

        <Button
            android:id="@+id/btnCrearReporte"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Crear reporte"
            android:textSize="22sp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="@color/boton_1"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/btnMisReportes"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Mis reportes"
            android:textSize="22sp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="@color/boton_2"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/btnVerReportesCercanos"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="Ver Reportes Cercanos"
            android:textSize="22sp"
            android:layout_marginBottom="25dp"
            android:backgroundTint="@color/boton_3"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/btnAcercaApp"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:backgroundTint="@color/boton_4"
            android:text="Acerca de la app"
            android:textColor="#000000"
            android:textSize="22sp" />

    </LinearLayout>

</LinearLayout>
